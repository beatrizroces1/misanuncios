@model WebApplication2.Models.Anuncio

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Anuncio</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <p>Categoría</p>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.categoria, ViewData["categorias"] as List<SelectListItem>, new { style = "width:800px;border-radius:5px;background-colo:white;border-color:lightgray;height:30px;border-width:0.15px;color:grey;" })
                @Html.ValidationMessageFor(model => model.categoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
          <p>Título del anuncio</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.titulo, new { maxlength = 50, htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Descripción del anuncio</p>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.descripcion, new { maxlength = 300,style = "width:1000px;height:100px;border-radius:5px;background-color:white;color:grey;"})
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>
        
    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<p style="font-size:9px;">
    Recuerde que el anuncio se dará de alta únicamente para la ciudad en la que se registró. Puede cambiar los datos de la ciudad accediendo al area personal
    @Html.ActionLink("Acceder", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
</p>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
